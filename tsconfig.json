{
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"],
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "Node",
      "outDir": "./lib",
      "declaration": true,
      "lib": ["dom", "es2017"],
      "allowJs": true,
      "checkJs": true,
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true
    }
  }
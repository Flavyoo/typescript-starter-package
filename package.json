  "bugs": {
    "url": "https://github.com/Flavyoo/typescript-starter-package/issues"
  },
  "homepage": "https://github.com/Flavyoo/typescript-starter-package#readme",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.4"
  }
